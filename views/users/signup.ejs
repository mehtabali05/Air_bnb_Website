<% layout("/layouts/boilerplate") %>
<div class="row">
    <div class="col-6 offset-3">
        
        <h3 class="mt-3 mb-3">Signup on Wanderlust</h3>
        <form action="/signup" method="post" novalidate class="needs-validation" >
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" id="username" class="form-control" required >
                <div class="invalid-feedback">Please enter username</div>
                <div class="valid-feedback">Username looks good!</div>
            </div> 
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" name="email" id="email" class="form-control" required >
                <div class="invalid-feedback">Please enter correct email</div>
                <div class="valid-feedback">Email looks good!</div>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" name="password" id="password" class="form-control" required >
             
            </div>
            <button class="btn btn-dark add-btn">Sinup</button>
        </form>
    </div>        
</div>    